#!/bin/bash
#
# postinst script for linuxmuster-base
# thomas@linuxmuster.net
# 20181124
# GPL v3
#

# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

SHAREDIR="/usr/share/linuxmuster-mail"
SYSDIR="/etc/linuxmuster"
SSLDIR="$SYSDIR/ssl"
DOCKERDIR="/srv/docker/linuxmuster-mail"
MAILDATA="$DOCKERDIR/maildata"
MAILSTATE="$DOCKERDIR/mailstate"

case "$1" in

 configure)

  # create docker group & user
  grep -q ^docker /etc/group || groupadd -g 5000 docker
  grep ^docker /etc/group | grep -q 5000 || groupmod -g 5000 docker
  grep -q ^docker /etc/passwd || useradd -u 5000 -d /srv/docker -g docker docker
  grep ^docker /etc/passwd | grep -q 5000 || usermod -u 5000 -d /srv/docker -g docker docker

  # permissions
  mkdir -p "$SSLDIR"
  chgrp docker "$SSLDIR" -R
  chmod 750 "$SSLDIR"
  chown docker:docker "$MAILSTATE" -R
  chown docker:docker "$MAILDATA" -R
  chmod 775 "$MAILSTATE"
  chmod 775 "$MAILDATA"

  # manage pinned version
  conf="/srv/docker/linuxmuster-mail/docker-compose.yml"
  if [ -s "$conf" ]; then
    template="/usr/share/linuxmuster-mail/templates/docker/docker-compose.yml"
    new_version="$(grep image: "$template" | awk -F: '{ print $3 }')"
    current_version="$(grep image: "$conf" | awk -F: '{ print $3 }')"
    if [ "$new_version" != "$current_version" ]; then
      echo "Changing version to $new_version."
      image="tvial/docker-mailserver:$new_version"
      cp "$conf" "$conf.bak"
      sed -e "s|image: .*|image: $image|" "$conf.bak" > "$conf"
      systemctl restart linuxmuster-mail.service
    fi
  fi
 ;;

 abort-upgrade|abort-remove|abort-deconfigure)
 ;;

 *)
  echo "postinst called with unknown argument \`$1'" >&2
  exit 1
 ;;

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
